kind: Deployment
apiVersion: apps/v1
metadata:
 name: gameoflife-app
 namespace: default
spec:
 replicas: 2
 selector:
  matchLabels:
   myapp: gameoflife
 template:
  metadata:
   labels:
    myapp: gameoflife
  spec:
   containers:
   - name: gameoflife
     image: tomcat:9.0.27
     volumeMounts:
     - name: app
       mountPath: /usr/local/tomcat/webapps
   volumes:
   - name: app
     hostPath:
      path: /home/node/Desktop

---

kind: Service
apiVersion: v1
metadata:
 name: gameoflife
 namespace: default
spec:
 type: NodePort
 selector:
  myapp: gameoflife
 ports:
 - port: 8081
   targetPort: 8080
   nodePort: 30006
